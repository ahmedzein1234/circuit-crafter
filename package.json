{
  "name": "circuit-crafter",
  "version": "0.1.0",
  "private": true,
  "description": "Educational circuit-building game evolving into a creator economy platform",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@circuit-crafter/web",
    "dev:api": "turbo run dev --filter=@circuit-crafter/api",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
